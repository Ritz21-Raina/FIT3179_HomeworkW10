{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/dataset.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [
          2000,
          2001,
          2002,
          2003,
          2004,
          2005,
          2006,
          2007,
          2008,
          2009,
          2010,
          2011,
          2012,
          2013,
          2014,
          2015,
          2016,
          2017,
          2018,
          2019,
          2020,
          2021,
          2022,
          2023
        ],
        "name": "Select Year:"
      }
    }
  ],
  "transform": [
    {"filter": "datum.sex === 'both'"},
    {"filter": "datum.ethnicity === 'overall'"},
    {
      "aggregate": [{"op": "sum", "field": "abs", "as": "total_births"}],
      "groupby": ["state", "Year"]
    },
    {"filter": "datum.Year == selectedYear"}
  ],
  "layer": [
    {
      "mark": {"type": "bar", "color": "#eb7474", "height": 2},
      "encoding": {
        "y": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "sort": "-x"
        },
        "x": {"field": "total_births", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "circle", "size": 150, "color": "#eb7474"},
      "encoding": {
        "y": {"field": "state", "type": "nominal", "sort": "-x"},
        "x": {
          "field": "total_births",
          "type": "quantitative",
          "title": "Total Live Births"
        },
        "tooltip": [
          {"field": "state", "title": "State"},
          {"field": "Year", "title": "Year"},
          {"field": "total_births", "title": "Total Live Births"}
        ]
      }
    }
  ],
  "title": {
    "text": "Total Live Births per State (2000â€“2023)",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "config": {}
}