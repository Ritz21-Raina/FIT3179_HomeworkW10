{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Live births per year for key ethnic groups (aggregated for all states, both sexes).",
  "title": "Live Birth trends by Ethnicity",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/dataset.csv"
  },
  "transform": [
    {"filter": "datum.sex == 'both'"},
    {
      "filter": "datum.ethnicity == 'bumi_malay' || datum.ethnicity == 'indian' || datum.ethnicity == 'chinese' || datum.ethnicity == 'bumi_other'"
    },
    {
      "calculate": "datum.ethnicity == 'bumi_malay' ? 'Bumiputera Malay' : datum.ethnicity == 'chinese' ? 'Chinese' : datum.ethnicity == 'indian' ? 'Indian' : 'Other Bumiputera'",
      "as": "Ethnicity_Label"
    },
    {
      "aggregate": [{"op": "sum", "field": "abs", "as": "total_births"}],
      "groupby": ["Year", "Ethnicity_Label"]
    }
  ],
  "mark": {"type": "line", "point": true, "strokeWidth": 2},
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "field": "total_births",
      "type": "quantitative",
      "title": "Live Births"
    },
    "color": {
      "field": "Ethnicity_Label",
      "type": "nominal",
      "title": "Ethnicity",
      "scale": {
        "domain": ["Bumiputera Malay", "Chinese", "Indian", "Other Bumiputera"],
        "range": ["#1f77b4", "#ff7f0e", "#FFD700", "#d62728"]
      }
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Ethnicity_Label", "type": "nominal", "title": "Ethnicity"},
      {"field": "total_births", "type": "quantitative", "title": "Live Births"}
    ]
  },
  "config": {}
}